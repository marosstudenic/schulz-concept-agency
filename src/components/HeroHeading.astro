---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="w-full bg-white">
  <div class="container mx-auto pb-8 pt-40 px-4">
    <p
      id="heading-tight"
      class="text-2xl md:text-7xl text-center"
      set:html={t("our-work.heading")}
    />
  </div>
</section>

<style>
  #heading-tight {
    line-height: 0.9;
  }
</style>
