---
export interface Props {
    title: string;
    description: string;
    img: string;
    index: number;
}

const { title, description, img, index } = Astro.props;
---


<div
        class="flex flex-col gap-4" data-aos="fade-up" data-aos-duration="1000"
>
    <p class="text-md lg:text-left text-black/50">{`${index + 1}`.padStart(2, '0')}</p>

    <div
            class="flex justify-center bg-[#E5E5E5] w-full rounded-2xl md:h-[400px] h-[200px]"
    >
        <img
                src=`${img}`
                class="w-full rounded-[5px] object-contain"
                alt=`${title}`
        />
    </div>
    <div class="flex flex-col gap-2">
        <p class="text-2xl text-left text-black">{title}</p>
        <p class="text-md text-left text-black/50">
            {description}
        </p>
    </div>
</div>