---
export interface Props {
    title: string;
    description: string;
    img: string;
    index: number;
}

const { title, description, img, index } = Astro.props;
---


<div
        class="flex flex-col gap-4"
>
    <p class="text-xl text-left text-black/50">{`0${index + 1}`}</p>

    <div
            class="flex justify-center bg-[#E5E5E5] w-full rounded-2xl h-[400px]"
    >
        <img
                src=`${img}`
                class="w-full rounded-[5px] object-contain"
                alt=`${title}`
        />
    </div>
    <div class="flex flex-col gap-2">
        <p class="text-2xl text-left text-black">{title}</p>
        <p class="text-md text-left text-black/50">
            {description}
        </p>
    </div>
</div>