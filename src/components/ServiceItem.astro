---
interface Props {
    title: string;
    description: string;
    index: string;
}

const { title, description, index } = Astro.props;
---

<div data-aos="fade-up">
    <p class="text-black/50 mb-2">{index}</p>
    <h3 class="text-4xl text-left text-black mb-2">{title}</h3>
    <p class="text-md text-left text-black/50 mb-6">
        {description}
    </p>
    <hr/>
</div>